- provide(:page_title, '新規会員登録')
= render "devise/shared/error_messages", resource: resource

.user__signup
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user__form"}) do |f|
    .user__form__info
      = f.label :last_name, "姓", class: "label_class"
      = f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "input_class"

    .user__form__info
      = f.label :first_name, "名", class: "label_class"
      = f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "input_class"

    .user__form__info
      = f.label :email, "メールアドレス", class: "label_class"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input_class"

    .user__form__info
      = f.label :password, "パスワード", class: "label_class"
      = f.password_field :password, autocomplete: "new-password", class: "input_class"
      %p ※#{@minimum_password_length}文字以上32文字以下で入力してください。

    .user__form__info
      .user__form--flex
        = f.label :password_confirmation, "パスワード", class: "label_class"
        = f.label :password_confirmation, "（再入力）", class: "label_class"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "input_class pswd_confirmation"

    %p
      = link_to "会員規約", static_pages_membership_agreement_path, target: :_blank, class: "link_sign_up" 
      を確認する

    .user__form__btn
      = f.submit "会員規約を承諾して登録する", class: "btn_sign_up"
  = render "devise/shared/links"