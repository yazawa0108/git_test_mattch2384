%h2 新規会員登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :last_name, "姓"
    %br/
    = f.text_field :last_name, autofocus: true, autocomplete: "family-name"
    .field
    = f.label :first_name, "名"
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "given-name"
  .field
    = f.label :email, "メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password, "パスワード（#{@minimum_password_length}文字以上32文字以下）"
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation, "パスワード（再度入力してください）"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  = link_to "会員規約", static_pages_membership_agreement_path, target: :_blank
  を確認する
  .actions
    = f.submit "会員規約を承諾して登録する"
= render "devise/shared/links"

